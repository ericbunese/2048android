<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.com.marblestudio.a2048android.GameActivity">

    <br.com.marblestudio.a2048android.ScoreMan
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/detailBackground"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Score"
        android:id="@+id/scoreMan"/>

    <br.com.marblestudio.a2048android.Game2048
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/board"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_again"
        android:visibility="invisible"
        android:onClick="clickHandlerPlayAgain"
        android:id="@+id/playAgain"/>
</LinearLayout>
